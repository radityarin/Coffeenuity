<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftTitle"
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Keuntungan"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rightTitle"
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fleksibilitas / Waktu Siklus Budaya"
            android:textAlignment="textEnd"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/colorSky50" />

        <TextView
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/colorSky50" />

        <TextView
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/colorSky50" />

        <TextView
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/colorSky50" />

        <TextView
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textAlignment="center" />

        <TextView
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/colorOrange50" />

        <TextView
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/colorOrange50" />

        <TextView
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/colorOrange50" />

        <TextView
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/colorOrange50" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin4"
        android:layout_marginEnd="@dimen/layout_margin3"
        android:checkedButton="@id/defaultButton"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorSky50"
            android:text="9"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorSky50"
            android:text="7"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorSky50"
            android:text="5"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorSky50"
            android:text="3"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/defaultButton"
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin4"
            android:layout_weight="1"
            android:buttonTint="@color/black"
            android:text="1"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin4"
            android:layout_weight="1"
            android:buttonTint="@color/colorOrange50"
            android:text="-3"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin4"
            android:layout_weight="1"
            android:buttonTint="@color/colorOrange50"
            android:text="-5"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin4"
            android:layout_weight="1"
            android:buttonTint="@color/colorOrange50"
            android:text="-7"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            style="@style/caption2_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin4"
            android:layout_weight="1"
            android:buttonTint="@color/colorOrange50"
            android:text="-9"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RadioGroup>
</LinearLayout>