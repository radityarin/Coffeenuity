<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".presentation.home.questioner.result.ResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/layout_margin2"
        android:background="@drawable/bg_edit_text"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            style="@style/headline5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_margin2"
            android:text="Hasil Perhitungan Fuzzy AHP"
            android:textAlignment="center" />

        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/RadarChart"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="@dimen/_400sdp" />

        <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rata-rata Indeks Geometri" />

            <TextView
                android:id="@+id/tvRataRataIndeksGeometri"
                style="@style/subtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30.0%" />

            <TextView
                style="@style/subtitle1"
                android:layout_marginTop="@dimen/layout_margin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ekonomi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori" />

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indeks Keberlanjutan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvKategoriEkonomi"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buruk"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIndeksKeberlanjutanEkonomi"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="36.5%"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sosial" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori" />

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indeks Keberlanjutan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvKategoriSosial"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buruk"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIndeksKeberlanjutanSosial"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="36.5%"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lingkungan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori" />

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indeks Keberlanjutan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvKategoriLingkungan"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buruk"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIndeksKeberlanjutanLingkungan"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="36.5%"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_marginTop="@dimen/layout_margin2"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/layout_margin2"
            android:text="Selanjutnya" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>