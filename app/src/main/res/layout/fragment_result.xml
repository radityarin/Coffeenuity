<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".presentation.home.questioner.result.ResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/layout_margin2"
        android:background="@drawable/bg_edit_text"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/headline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/layout_margin2"
                android:text="Hasil"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle2"
                style="@style/caption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/layout_margin2"
                android:text="Berikut merupakan hasil dari proses perhitungan kuisioner"
                android:textAlignment="center"
                android:textColor="@color/colorTextGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/RadarChart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp"
                android:elevation="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_marginTop="@dimen/layout_margin3"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle2" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_margin4">

                        <TextView
                            style="@style/caption2_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ekonomi"
                            android:textAlignment="center" />

                        <app.futured.donut.DonutProgressView
                            android:id="@+id/donutEkonomi"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginTop="@dimen/layout_margin3"
                            app:donut_gapAngle="270"
                            app:donut_gapWidth="0"
                            app:donut_strokeWidth="10dp" />

                        <TextView
                            android:id="@+id/tvIndeksKeberlanjutanEkonomi"
                            style="@style/caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="40%"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tvKategoriEkonomi"
                            style="@style/caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Buruk"
                            android:textAlignment="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_margin4">

                        <TextView
                            style="@style/caption2_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sosial"
                            android:textAlignment="center" />

                        <app.futured.donut.DonutProgressView
                            android:id="@+id/donutSosial"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginTop="@dimen/layout_margin3"
                            app:donut_gapAngle="270"
                            app:donut_gapWidth="0"
                            app:donut_strokeWidth="10dp" />

                        <TextView
                            android:id="@+id/tvIndeksKeberlanjutanSosial"
                            style="@style/caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="40%"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tvKategoriSosial"
                            style="@style/caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Buruk"
                            android:textAlignment="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_margin4">

                        <TextView
                            style="@style/caption2_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lingkungan"
                            android:textAlignment="center" />

                        <app.futured.donut.DonutProgressView
                            android:id="@+id/donutLingkungan"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginTop="@dimen/layout_margin3"
                            app:donut_gapAngle="270"
                            app:donut_gapWidth="0"
                            app:donut_strokeWidth="10dp" />

                        <TextView
                            android:id="@+id/tvIndeksKeberlanjutanLingkungan"
                            style="@style/caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="40%"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tvKategoriLingkungan"
                            style="@style/caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Buruk"
                            android:textAlignment="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_margin2">

                    <TextView
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hasil Rata-rata\nIndeks Geometri"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tvRataRata"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/layout_margin2"
                        android:text="40%"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/donutRataRata"
                        app:layout_constraintTop_toTopOf="parent" />

                    <app.futured.donut.DonutProgressView
                        android:id="@+id/donutRataRata"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/layout_margin3"
                        app:donut_gapAngle="270"
                        app:donut_gapWidth="0"
                        app:donut_strokeWidth="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnNext"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorRose50"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/layout_margin2"
            android:layout_marginBottom="@dimen/layout_margin2"
            android:text="Strategi" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>