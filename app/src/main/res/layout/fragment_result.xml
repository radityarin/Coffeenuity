<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".presentation.home.questioner.result.ResultFragment">

    <TextView
        style="@style/headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/layout_margin2"
        android:layout_marginTop="@dimen/_40sdp"
        android:text="Hasil Perhitungan Fuzzy AHP"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/layout_margin2"
        android:background="@drawable/bg_edit_text"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin2">


        <TextView
            style="@style/subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rata-rata Indeks Geometri" />

        <TextView
            android:id="@+id/tvRataRataIndeksGeometri"
            style="@style/subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="35%" />


        <LinearLayout
            android:layout_marginTop="@dimen/layout_margin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ekonomi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori" />

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indeks Keberlanjutan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvKategoriEkonomi"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buruk"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIndeksKeberlanjutanEkonomi"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="36.5%"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sosial" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori" />

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indeks Keberlanjutan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvKategoriSosial"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buruk"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIndeksKeberlanjutanSosial"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="36.5%"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lingkungan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori" />

                    <TextView
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indeks Keberlanjutan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvKategoriLingkungan"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buruk"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIndeksKeberlanjutanLingkungan"
                        style="@style/caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="36.5%"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        style="@style/ButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/layout_margin2"
        android:layout_marginBottom="@dimen/layout_margin2"
        android:text="Selanjutnya" />
</RelativeLayout>