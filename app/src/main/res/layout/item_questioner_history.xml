<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/layout_margin2"
    android:layout_marginTop="@dimen/layout_margin2"
    android:background="@drawable/bg_history"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin2">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Budi Hartono"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="27 Juni 2021"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ekonomi"
                android:textColor="@color/white" />

            <TextView
                style="@style/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sosial"
                android:textColor="@color/white" />

            <TextView
                style="@style/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lingkungan"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvKategoriEkonomi"
                style="@style/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buruk"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvKategoriSosial"
                style="@style/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buruk"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvKategoriLingkungan"
                style="@style/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buruk"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
